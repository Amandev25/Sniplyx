<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Sniplyx - Smart URL Shortener</title>
  <link rel="icon" href="../public/favicon1.ico" type="image/x-icon">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

  <style>
    body {
      font-family: 'Poppins', sans-serif;
      background: linear-gradient(to right, #0f2027, #203a43, #2c5364);
      color: #fff;
    }

    .navbar {
      background-color: rgba(255, 255, 255, 0.05);
    }

    .container-box {
      background: #fff;
      color: #333;
      border-radius: 16px;
      padding: 2rem;
      max-width: 600px;
      margin-top: 80px;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
    }

    .brand {
      font-weight: bold;
      font-size: 2rem;
      color: #0d6efd;
    }

    .form-control {
      border-radius: 12px;
      padding: 0.75rem 1rem;
      font-size: 1rem;
      border: 1px solid #ced4da;
    }

    .form-control:focus {
      border-color: #0d6efd;
      box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
    }

    .qr-img {
      max-width: 160px;
      border-radius: 12px;
      border: 1px solid #dee2e6;
      padding: 6px;
      background: #fff;
    }

    #resultBox {
      display: none;
    }

    .toast-container {
      position: fixed;
      bottom: 1rem;
      right: 1rem;
      z-index: 9999;
    }

    a:hover, button:hover {
      opacity: 0.9;
      transition: 0.3s ease;
    }
  </style>
</head>
<body>

  <!-- ‚úÖ Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark px-3">
    <div class="container-fluid">
      <span class="navbar-brand brand d-flex align-items-center gap-2">
  <img src="/logo.png" alt="Sniplyx Icon" style="height: 30px;">
  Sniplyx
</span>

      <div class="d-flex">
        <a class="btn btn-outline-light me-2" href="/login">Login</a>
        <a class="btn btn-primary" href="/sign">Sign Up</a>
      </div>
    </div>
  </nav>

  <!-- ‚úÖ Main Container -->
  <div class="container d-flex justify-content-center">
    <div class="container-box text-center">
      <p class="mb-4">Paste your long URL below to get a snappy, trackable short link with a downloadable QR code!</p>
       <img src="/hero.png" alt="Sniplyx Illustration" class="img-fluid mb-4" style="max-height: 220px;">

      <form id="urlForm">
        <input type="url" class="form-control mb-3" id="longUrl" placeholder="https://example.com/my-long-url" required />
        <button type="submit" class="btn btn-primary w-100">Shorten My Link üîó</button>
      </form>

      <!-- Spinner -->
      <div class="mt-3" id="spinner" style="display: none;">
        <div class="spinner-border text-primary" role="status"></div>
        <p class="mt-2">Generating your short link...</p>
      </div>

      <!-- ‚úÖ Result Display -->
      <div id="resultBox" class="mt-4">
        <h5>Your Sniplyx Link:</h5>
        <a href="#" id="shortUrlLink" target="_blank" class="d-block mb-2 text-primary fw-bold"></a>

        <button onclick="copyToClipboard()" class="btn btn-outline-success btn-sm mb-3">üìã Copy URL</button>

        <div>
          <h6>Scan or Download QR:</h6>
          <img id="qrCode" src="" alt="QR Code" class="qr-img" />
          <div class="mt-2">
            <a id="downloadQr" href="#" download="sniplyx-qr.png" class="btn btn-sm btn-outline-dark">‚¨áÔ∏è Download QR</a>
          </div>
        </div>

        <button class="btn btn-outline-secondary mt-3" id="analyticsBtn">üìä View Analytics</button>
      </div>
    </div>
  </div>

  <!-- ‚úÖ Toast Notification -->
  <div class="toast-container">
    <div id="successToast" class="toast align-items-center text-bg-success border-0" role="alert">
      <div class="d-flex">
        <div class="toast-body">Short URL created successfully! üöÄ</div>
        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
      </div>
    </div>
  </div>

  <!-- ‚úÖ Scripts -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    const form = document.getElementById('urlForm');
    const spinner = document.getElementById('spinner');
    const resultBox = document.getElementById('resultBox');
    const shortUrlLink = document.getElementById('shortUrlLink');
    const qrCode = document.getElementById('qrCode');
    const downloadQr = document.getElementById('downloadQr');
    const analyticsBtn = document.getElementById('analyticsBtn');
    const toast = new bootstrap.Toast(document.getElementById('successToast'));
    let currentShortId = "";

    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      spinner.style.display = 'block';
      resultBox.style.display = 'none';

      const url = document.getElementById('longUrl').value;
      const res = await fetch('/url', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ url })
      });

      const data = await res.json();
      currentShortId = data.id;

      const shortUrl = `${window.location.origin}/${data.id}`;
      shortUrlLink.href = shortUrl;
      shortUrlLink.textContent = shortUrl;

      const qrApiUrl = `https://api.qrserver.com/v1/create-qr-code/?data=${encodeURIComponent(shortUrl)}&size=160x160`;
      qrCode.src = qrApiUrl;
      downloadQr.href = qrApiUrl;

      spinner.style.display = 'none';
      resultBox.style.display = 'block';
      toast.show();
    });

    analyticsBtn.addEventListener('click', () => {
      window.location.href = `/url/analytics/${currentShortId}`;
    });

    function copyToClipboard() {
      navigator.clipboard.writeText(shortUrlLink.textContent).then(() => {
        alert('Copied to clipboard!');
      });
    }
  </script>
</body>
</html>
