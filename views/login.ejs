<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Sniplyx - Login</title>
  <link rel="icon" href="/favicon.png" type="image/png">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <style>
    body {
      font-family: 'Poppins', sans-serif;
      background: linear-gradient(to right, #0f2027, #203a43, #2c5364);
      color: #fff;
    }

    .navbar {
      background-color: rgba(255, 255, 255, 0.05);
    }

    .login-box {
      background: #fff;
      color: #333;
      border-radius: 16px;
      padding: 2rem;
      max-width: 500px;
      margin-top: 80px;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
    }

    .form-control {
      border-radius: 12px;
      padding: 0.75rem 1rem;
      font-size: 1rem;
    }

    .form-control:focus {
      border-color: #0d6efd;
      box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
    }

    .error-message {
      color: #dc3545;
      font-size: 0.95rem;
    }

    button:hover {
      opacity: 0.9;
      transition: 0.3s ease;
    }
  </style>
</head>
<body>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark px-3">
    <div class="container-fluid">
      <a href="/" class="navbar-brand brand d-flex align-items-center gap-2 text-decoration-none snip-hover">
        <img src="/logo.png" alt="Sniplyx Icon" style="height: 30px;">
        <span class="fw-bold fs-4">Sniplyx</span>
      </a>
    </div>
  </nav>

  <!-- Login Form -->
  <div class="container d-flex justify-content-center">
    <div class="login-box text-center">
      <h3 class="mb-4 text-primary">Welcome Back</h3>

      <% if (typeof error !== "undefined") { %>
        <div class="alert alert-danger py-2"><%= error %></div>
      <% } %>

      <form method="POST" action="/user/login">
        <div class="mb-3 text-start">
          <label for="email" class="form-label">Email</label>
          <input type="email" name="email" class="form-control" id="email" required>
        </div>

        <div class="mb-3 text-start">
          <label for="password" class="form-label">Password</label>
          <input type="password" name="password" class="form-control" id="password" required>
        </div>

        <button type="submit" class="btn btn-primary w-100 mt-2">Login</button>
      </form>

      <div class="mt-3 text-muted small">
        Don't have an account? <a href="/sign" class="text-decoration-none">Sign up</a>
      </div>
    </div>
  </div>

</body>
</html>
